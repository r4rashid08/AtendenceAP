<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item android:height="30dp"
            >
            <shape>
                <solid
                    android:color="@color/white">
                </solid>

                <corners android:radius="2dp" />

                <padding
                    android:bottom="2dp"
                    android:left="1dp"
                    android:right="20dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/grey"/>
            </shape>
        </item>
        <item android:drawable="@drawable/downdrop"
            android:width="27dp"
            android:height="27dp"
            android:gravity="right"
            >

        </item>
    </layer-list></item>
</selector>